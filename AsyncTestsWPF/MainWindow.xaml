<Window x:Class="AsyncTestsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncTestsWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="5,0,0,0">
            <TextBox x:Name="txtName" />
            <Button x:Name="btnMainThreadDeadlock" Margin="0,5,0,0" Click="btnMainThreadDeadlock_Click">Deadlock using IO</Button>
            <Button x:Name="btnMainThreadDeadlockCPU" Margin="0,5,0,0" Click="btnMainThreadDeadlockCPU_Click">Deadlock with CPU bound code</Button>
            <Button x:Name="btnMainThreadDeadlockCPUDelay" Margin="0,5,0,0" Click="btnMainThreadDeadlockCPUDelay_Click">Deadlock with CPU bound code even with just Task.Delay()</Button>
            <Button x:Name="btnMainThreadNoDeadlock" Margin="0,5,0,0" Click="btnMainThreadNoDeadlock_Click">No deadlock</Button>
        </StackPanel>
    </Grid>
</Window>
